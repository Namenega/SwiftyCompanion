<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastelLightBlue"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/titleconnection"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="13dp">

        <ImageView
            android:id="@+id/img42"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/logo42"
            android:contentDescription="42 logo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/titleconnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="13dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/swifty_companion"
            android:textAlignment="center"
            android:textSize="@dimen/_24sdp"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textColor="@color/white" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_26sdp"
            android:text="@string/by_namenega"
            android:textAlignment="textEnd"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/_14sdp"
            android:layout_marginRight="@dimen/_14sdp"

            android:text="@string/login_with_42"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="13dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/namenega_student_s19_be"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>